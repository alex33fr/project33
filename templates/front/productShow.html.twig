{% extends 'base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}
    <div class="container my-4">
        <h2 class="text-center my-5 font-weight-bold">{{ product.title }}</h2>
        <div class="row">
            <div class="col-lg-1"></div>
                <div class="col-lg-10">
                    <div class="card mt-4">
                        <img class="card-img-top img-fluid" src="{{ vich_uploader_asset(product, 'imageFile') | imagine_filter('productBanner_filter') }}" alt="{{ product.altImage }}">
                        <div class="card-body my-2">
                            <p class="card-text">{{ product.descTwo }}</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class=" card my-4">
                            <div class="card-header text-center">
                                Дополнительное описание товара
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled">
                                    <li>Название: {{ product.title }}</li>
                                    <li>Цена: {{ product.price }} руб.</li>
                                    <li>Модель: {{ product.model }}</li>
                                    <li>Цвет: {{ product.color }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="col-lg-1"></div>
            </div>
        </div>
    <!-- /.container -->
{% endblock %}
