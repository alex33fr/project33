<form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('Вы действительно хотите удалить данную категорию?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-outline-danger btn-block mt-2"><i class="fas fa-trash-alt mr-2"></i>Удалить</button>
</form>



