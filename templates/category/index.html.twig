{% extends 'base.html.twig' %}

{% block title %}Список категорий{% endblock %}

{% block body %}

<div class="container my-4">
    <h1 class="text-center my-4 text-dark">Список категорий</h1>
    <table class="table-responsive-sm text-center table-hover">
        <thead>
            <tr>
                <th>Название</th>
                <th>Картинка</th>
                <th>Описание</th>
                <th>Изменено</th>
                <th>Дата создания</th>
                <th>Lft</th>
                <th>Rgt</th>
                <th>Lvl</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.title }}</td>
                <td>
                    {% if category.imageFile is not empty %}
                    <img src="{{ vich_uploader_asset(category, 'imageFile') | imagine_filter('table_filter') }}" alt="{{ category.title }}">
                    {% else %}
                        <img src="http://placehold.it/50x50" alt="default image">
                    {% endif %}
                </td>
                <td>{{ category.description | u.truncate(40, true, '...')  | raw }}</td>
                <td>{{ category.updatedAt ? category.updatedAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ category.createdAt ? category.createdAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ category.lft }}</td>
                <td>{{ category.rgt }}</td>
                <td>{{ category.lvl }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn-sm btn-secondary text-decoration-none">Показать</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn-sm btn-warning text-decoration-none">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Категорий не найдено в базе данных</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
