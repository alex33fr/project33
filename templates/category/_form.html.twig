<div class="container min-vh-100">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">

            {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.imageFile)}}
            {{ form_row(form.altImage)}}
            {{ form_row(form.description, {'class' : 'textareatinymce'})}}
            {{ form_row(form.parent)}}
            <button class="btn btn-block btn-outline-primary my-2"><i class="fas fa-pen mr-2"></i>{{ button_label|default('Создать') }}</button>
            {{ form_end(form) }}
        </div>
        <div class="col-2"></div>
    </div>
</div>