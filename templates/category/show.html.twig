{% extends 'base.html.twig' %}

{% block title %}Категория{% endblock %}

{% block body %}
    <h1 class="text-center my-4 text-dark">Категория: {{ category.title }}</h1>
<div class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Название</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Картинка</th>
                <td><img src="{{ vich_uploader_asset(category, 'imageFile') | imagine_filter('productBanner_filter') }}" alt="{{ category.title }}"></td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Именинно</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Созданно</th>
                <td>{{ category.createdAt ? category.createdAt|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Лево</th>
                <td>{{ category.lft }}</td>
            </tr>
            <tr>
                <th>Право</th>
                <td>{{ category.rgt }}</td>
            </tr>
            <tr>
                <th>Уровень</th>
                <td>{{ category.lvl }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('category_index') }}" class="btn btn-secondary">Вернуться к списку</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning">Изменить</a>

    {{ include('category/_delete_form.html.twig') }}
</div>
{% endblock %}



