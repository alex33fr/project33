<div class="container min-vh-100">
    <section>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                {{ message }}
            </div>
        {% endfor %}
        <div class="container">
            <h2 class="text-center mt-3">Заказать звонок</h2>
            <div class="row">
                <div class="col-sm-8 mx-auto input-group pt-4">
                    <div class="input-group-prepend">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-dark">{{ button_label|default('Отправить') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

