{% extends 'base.html.twig' %}

{% block title %}Запросы на звонок{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="my-4 text-dark text-center">Запросы на звонок</h1>

        <table class="table table-responsive-sm table-hover text-center">
            <thead>
            <tr>
                <th>Имя</th>
                <th>Телефон</th>
                <th>Email</th>
                <th>Сообщение</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for contact_form in contact_forms %}
                <tr>
                    <td>{{ contact_form.name }}</td>
                    <td>{{ contact_form.phone }}</td>
                    <td>{{ contact_form.email }}</td>
                    <td>{{ contact_form.message }}</td>
                    <td>
                        <a href="{{ path('contact_form_show', {'id': contact_form.id}) }}">Просмотреть</a>
                        <a href="{{ path('contact_form_edit', {'id': contact_form.id}) }}">Изменить</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Записей не найденно</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
