<form method="post" action="{{ path('product_delete', {'id': product.id}) }}" onsubmit="return confirm('Вы действительно хотите удалить данный товар?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-outline-danger btn-block mt-2"><i class="fas fa-trash-alt mr-2"></i>Удалить</button>
</form>
