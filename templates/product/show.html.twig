{% extends 'base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}
        <h1 class="text-center my-4 text-dark">Товар: {{ product.title }}</h1>
<div class="container my-4">
        <table class="table">
            <tbody>
            <tr>
                <th>Название</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Картинка</th>
                <td><img src="{{ vich_uploader_asset(product, 'imageFile') | imagine_filter('product_filter') }}" alt="{{ product.title }}"></td>
            </tr>
            <tr>
                <th>Модель</th>
                <td>{{ product.model }}</td>
            </tr>
            <tr>
                <th>Цвет</th>
                <td>{{ product.color }}</td>
            </tr>
            <tr>
                <th>Краткое описание</th>
                <td>{{ product.descOne |raw}}</td>
            </tr>
            <tr>
                <th>Полное описание</th>
                <td>{{ product.descTwo |raw}}</td>
            </tr>
            </tbody>
        </table>
            <a href="{{ path('product_index') }}" class="btn btn-outline-secondary">Вернуться к списку</a>
            <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-outline-warning">Изменить</a>
        {{ include('product/_delete_form.html.twig') }}
</div>
{% endblock %}
